<mapper namespace = "seico">

  <insert id="create" parameterType="SeicoVO">
    INSERT INTO seico(sc_no,
                 sc_area, sc_jobs, sc_title, sc_name, sc_cont, sc_like, sc_date, file1, file2, size2 )
                    
    VALUES((SELECT NVL(MAX(sc_no), 0) + 1 as sc_no FROM seico),
                #{sc_area}, #{sc_jobs}, #{sc_title}, #{sc_name}, #{sc_cont}, 0, sysdate, #{file1}, #{file2}, #{size2})
  </insert>
  
   <select id="list" resultType="SeicoVO">
    SELECT sc_no,
           sc_area, sc_jobs, sc_title, sc_name, sc_date, file1, file2, size2, sc_cnt
    FROM seico
    ORDER BY sc_no DESC
  </select>  
 
  <select id="read" resultType="SeicoVO" parameterType="int">
    SELECT sc_no, sc_area, sc_jobs, sc_title, sc_name, sc_cont, sc_cnt, sc_date, file1, file2, size2
    FROM seico
    WHERE sc_no=#{sc_no}  
  </select>  
  
   <update id='update' parameterType="SeicoVO">
    UPDATE seico
   SET sc_title=#{sc_title}, sc_name=#{sc_name}, sc_cont=#{sc_cont}, sc_jobs=#{sc_jobs}, sc_area=#{sc_area},  
       file1=#{file1}, file2=#{file2}, size2=#{size2}
   WHERE sc_no=#{sc_no}
  </update>
  
  <update id='cntup' parameterType="int">
    UPDATE seico
   SET sc_cnt= sc_cnt+1
   WHERE sc_no=#{sc_no}
  </update>
  
  <delete id="delete" parameterType="int">
    DELETE FROM seico
    WHERE sc_no=#{sc_no}
  </delete>
  
 <!-- ********** 검색에 따른 변경 시작 ********** -->
  <select id="list2" resultType="SeicoVO" parameterType="HashMap" >
    SELECT sc_no,
        sc_title, file1, file2, size2, sc_cnt, sc_date, 
     FROM seico
   <!--  WHERE sc_no=#{sc_no} -->
    
    <choose>
      <when test="col == 'title'">
         AND sc_title LIKE '%' || #{word} || '%' 
      </when>
      <when test="col == 'content'">
         AND sc_cont LIKE '%' || #{word} || '%' 
      </when>
      <when test="col == 'title_content'">
         AND sc_title LIKE '%' || #{word} || '%'  OR sc_cont LIKE '%' || #{word} || '%' 
      </when>
    </choose>
    
    ORDER BY sc_no DESC
  </select>        
 
  <select id="count" resultType="int" parameterType="HashMap" >
    SELECT COUNT(*) as sc_cnt
    FROM seico
    <!-- WHERE sc_no=#{sc_no} -->
    
    <choose>
      <when test="col == 'title'">
        WHERE sc_title LIKE '%' || #{word} || '%' 
      </when>
      <when test="col == 'content'">
        WHERE sc_cont LIKE '%' || #{word} || '%' 
      </when>
      <when test="col == 'title_sc_content'">
        WHERE sc_title LIKE '%' || #{word} || '%'  OR sc_cont LIKE '%' || #{word} || '%' 
      </when>      
    </choose>
  </select>        
 
  <!-- ********** 검색에 따른 변경 종료 ********** --> 
  
   <!-- ********** 페이징에 따른 종료 ********** -->
  <select id="list4" resultType="SeicoVO" parameterType="HashMap" >
SELECT sc_no, sc_area, sc_jobs, sc_title, sc_name, sc_cnt, sc_date, file1, file2, size2, r
    FROM(
       SELECT sc_no, sc_area, sc_jobs, sc_title, sc_name, sc_cnt, sc_date, file1, file2, size2, rownum as r
       FROM(
            SELECT sc_no, sc_area, sc_jobs, sc_title, sc_name, sc_cnt, sc_date, file1, file2, size2
            FROM seico
            <choose>
              <when test="col == 'title'">
                 WHERE sc_title LIKE '%' || #{word} || '%'  
              </when>
              <when test="col == 'content'">
                 WHERE sc_cont LIKE '%' || #{word} || '%' 
              </when>
              <when test="col == 'title_content'">
                 WHERE sc_title LIKE '%' || #{word} || '%'  OR sc_cont LIKE '%' || #{word} || '%' 
              </when>      
            </choose>
            ORDER BY sc_no DESC
       )
    )
    WHERE <![CDATA[r >=#{startNum} AND r <= #{endNum}]]>
      </select> 
